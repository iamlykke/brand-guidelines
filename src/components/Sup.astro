---
interface SupProps {
  class?: string;
  gap?: string; // отступ слева от заголовка
  color?: string;
  [attr: string]: any;
}
const {
  class: className = "",
  gap = "0px",
  color = "var(--accent-9, #A3A3A3)",
  ...attrs
} = Astro.props as SupProps;
---

<sup
  class={`sup ${className}`}
  style={`margin-left:${gap}; color:${color};`}
  {...attrs}
>
  <slot />
</sup>

<style>
  .sup {
    font-family: var(--font-heading, "Rethink Sans", sans-serif);
    font-weight: var(--display-weight, 500);
    font-size: var(--display-size, 10px);
    line-height: var(--display-line-height, 120%);
    letter-spacing: var(--display-letter-spacing, -0.02em);

    vertical-align: super;
    margin-left: 6px;
  }
</style>
